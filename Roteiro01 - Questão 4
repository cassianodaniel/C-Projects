#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#define njogadores 23
#include <locale>

using namespace std;

class Jogador{
    public:
        int votos;
};

void zera_votos(){
    for (int i=1;i<24;i++){
        Jogador.votos[i] = 0;}
}


int main(){

zera_votos();
setlocale(LC_ALL, "Portuguese");
int num, melhorjogador, nvotosmelhorjogador;
Jogador jogadores[22];
static int qtvotos = 0;

cout << "Por favor, digite um número entre 1 e 23. \nPara encerrar a votacao do programa, digite 0." << endl;
cin >> num;
qtvotos++;

while(num<1 || num>23){
    cout << "Digite outro número de 1 a 23, por favor." << endl;
    cin >> num;
    }
    
if(num==0){
        cout << "Votacao encerrada com sucesso." << endl;
        cout << "Total de votos computados: " << qtvotos << "." << endl;
        cout << "Os números e respectivos votos de todos os jogadores que receberam votos: " << endl;
            for(int i=0; i<23;i++){
                    if (jogadores[i].votos != 0){
                        cout << "O jogador número " << i << " obteve: " << jogadores[i].votos << " votos." << endl;
                    }
                }
                cout << "Percentual de votos de cada um destes jogadores:" << endl;
                    for(int i=0;i<23;i++){
                cout << "Jogador " << i << ": " << (((jogadores[i].votos)/votos)*100) << "%" << endl;}

                cout << "Número	do jogador escolhido como o melhor jogador da partida, juntamente"
                "com o número de votos e o percentual de votos dados a ele: " << endl;

                for(int i=0;i<23;i++){
                    if(tvotos/jogadores[i].votos > tvotos % jogadores[i--].votos){
                        melhorjogador = i;
                    }
                }

                cout << melhorjogador;
                for(int i=0; i<23;i++){
                    if(jogadores[i].votos > jogadores[i].votos--){
                        nvotosmelhorjogador = jogadores[i].votos;
                    }
                }
                cout << nvotosmelhorjogador;
                return 0;
        };
    }

return 0;
}


