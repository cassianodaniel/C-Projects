#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <iostream>

using namespace std;

class Invoice{
    private:
        int numero;
        string descricao;
        int quantidade;
        double preco;
        double amount;
            Invoice(int numero, string descricao, int quantidade, double preco, double amount){
                numero = 0;
                descricao = '.';
                quantidade = 30;
                preco = 40;
                amount = 0;
            }
                public:
                    int getNumero();
                    string getDescricao();
                    int getQuantidade();
                    double getPreco();
                    double getInvoiceAmount();
};

extern int Invoice::getNumero(){
    return numero;
}

extern string Invoice::getDescricao(){
    return descricao;
}

extern int Invoice::getQuantidade(){
    return quantidade;
}

extern double Invoice::getPreco(){
    return preco;
}

extern double Invoice::getInvoiceAmount(){
        if(quantidade < 0){
            quantidade = 0;
        }
        else if(preco < 0){
            preco = 0;
        }
    amount = (quantidade*preco);
    return amount;
}

int main(){
setlocale(LC_ALL, "Portuguese");
double Invoice::var = Invoice::getInvoiceAmount;
printf("%f", var);
return 0;
}
