//nomedaclasse.h
#ifndef NOMEDACLASSE_H
#define NOMEDACLASSE_H
#include <string>

using namespace std;

class nomedaclasse{
    public:
        string Nome, Sobrenome;
        double Salario;
        nomedaclasse(string,string,double);
        string getNome();
        string getSobrenome();
        double getSalario();
        void setNome(string varsetnome);
        void setSobrenome(string varsetsobrenome);
        void setSalario(double varsetsalario);
};

#endif // NOMEDACLASSE_H
______________________________________________
//nomedaclasse.p
#include "nomedaclasse.h"

nomedaclasse::nomedaclasse(string nome,string sobrenome, double salario){
    Nome = nome;
    Sobrenome = sobrenome;
    Salario = salario;
}
string nomedaclasse::getNome(){
    return this->Nome;
}
string nomedaclasse::getSobrenome(){
    return this->Sobrenome;
}
double nomedaclasse::getSalario(){
    return this->Salario;
}
void nomedaclasse::setNome(string varsetnome){
    this->Nome = varsetnome;
}
void nomedaclasse::setSobrenome(string varsetsobrenome){
    this->Sobrenome = varsetsobrenome;
}
void nomedaclasse::setSalario(double varsetsalario){
    this->Salario = varsetsalario;
}
__________________________________________________

